{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "preserve",
    "incremental": true,
    "types": ["cypress", "@testing-library/cypress"],
    "declaration": true,
    "isolatedModules": true,
    "paths": {
      "@components/*": ["src/components/*"],
      "@utility/*": ["utility/*"],
      "@public/*": ["public/*"],
      "@types/*": ["src/types/*"],
      "@server/*": ["server/*"],
      "@styles/*": ["styles/*"],
      "@theme/*": ["styles/theme/*"]
    }
  },

  "include": [
    "next-env.d.ts",
    "utility/global.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "pages/**/*",
    "src/**/*",
    "commitlint.config.js",
    "eslintrc.js",
    "server/lib/dbConnection.ts",
    "cypress/plugins/index.js",
    "webpack.config.js",
    "cypress/support/index.js",
    "cypress/support/commands.js",
    "src/pages/404.js",
    "next.config.js"
  ],
  "exclude": ["node_modules"]
}
